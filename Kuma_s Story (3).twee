:: StoryScript [script]
window.sendChoice = function(playerName, npcName, action, timeTaken, age) {
	const endpoint = "https://script.google.com/macros/s/AKfycby-QoAxG5r6aFNr4dNGDqtm_wbc3amavWEid9kaqyue6NYjyRm8Sbl5zU46t-AB3fWi8g/exec";

	const payload = {
		name: playerName,
		age: age,
		npc: npcName,
		action: action,
		time: timeTaken.toString()
	};

	fetch(endpoint, {
		method: "POST",
		headers: {
			"Content-Type": "application/json"
		},
		body: JSON.stringify(payload)
	}).then(response => {
		if (response.ok) {
			console.log("Dados enviados com sucesso");
		} else {
			console.warn("Falha ao enviar dados: ", response.status);
		}
	}).catch(error => {
		console.error("Erro na requisição:", error);
	});
};
